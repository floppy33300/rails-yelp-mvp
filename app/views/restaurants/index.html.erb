<div class="container">
  <h1>All the restaurants</h1>

  <% @restaurants.each do |restaurant| %>
    <div class="card m-2">
      <p><%= restaurant.name %></p>
      <p><%= restaurant.address %></p>
      <%= link_to 'See more', restaurant_path(restaurant)  %>
      <%= link_to restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure ?"} do %>
      <% end %>
    </div>
  <% end %>
  <p><%= link_to "new restaurant", new_restaurant_path  %></p>
</div>
