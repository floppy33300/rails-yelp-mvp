<div class="container">
  <%= simple_form_for restaurant do |r| %>
    <% if @restaurant.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= r.input :name %>
    <%= r.input :address %>
    <%= r.input :category, collection: Restaurant::CATEGORIES %>
    <%= r.input :phone_number %>
    <%= r.submit "submit", class: "btn btn-primary w-100" %>
  <% end %>
</div>
